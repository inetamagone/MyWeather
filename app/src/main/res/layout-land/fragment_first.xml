<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/space_16"
        tools:context=".FirstFragment">
        <LinearLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:weightSum="2">
                <LinearLayout
                    android:id="@+id/address_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/city_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_city"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_30" />
                    <TextView
                        android:id="@+id/updated_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_updated"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />
                    <ImageView
                        android:id="@+id/image_main"
                        android:layout_width="@dimen/size_80"
                        android:layout_height="@dimen/size_80"
                        android:layout_gravity="center"
                        android:src="@drawable/sun" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/forecast_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/conditions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/text_conditions"
                        android:textSize="@dimen/text_16" />
                    <TextView
                        android:id="@+id/temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/text_temp"
                        android:textSize="@dimen/text_32" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/temp_min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_min_temp" />
                        <Space
                            android:layout_width="@dimen/space_50"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/temp_max"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_max_temp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/main_details_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_5">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/search_hint"
                            android:inputType="text"
                            android:lines="1"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <ImageView
                        android:id="@+id/search_icon"
                        android:layout_width="@dimen/space_50"
                        android:layout_height="match_parent"
                        android:padding="@dimen/space_10"
                        android:src="@drawable/search" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/details_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_5"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/light_color"
                        app:cardCornerRadius="@dimen/space_10"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/space_5"
                            android:paddingBottom="@dimen/space_5">
                            <ImageView
                                android:layout_width="@dimen/space_25"
                                android:layout_height="@dimen/space_25"
                                android:src="@drawable/wind" />
                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/space_5" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/wind_title"
                                android:textSize="@dimen/text_12" />
                            <TextView
                                android:id="@+id/wind_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_wind"
                                android:textSize="@dimen/text_14" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <Space
                        android:layout_width="@dimen/space_10"
                        android:layout_height="wrap_content" />
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/light_color"
                        app:cardCornerRadius="@dimen/space_10"
                        android:layout_weight="1"
                        android:padding="@dimen/space_5">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/space_5"
                            android:paddingBottom="@dimen/space_5">
                            <ImageView
                                android:layout_width="@dimen/space_25"
                                android:layout_height="@dimen/space_25"
                                android:src="@drawable/humidity" />
                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/space_5" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/humidity_title"
                                android:textSize="@dimen/text_12" />
                            <TextView
                                android:id="@+id/humidity_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_humidity"
                                android:textSize="@dimen/text_14" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/details_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="2">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/light_color"
                        app:cardCornerRadius="@dimen/space_10"
                        android:layout_weight="1"
                        android:padding="@dimen/space_5">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/space_5"
                            android:paddingBottom="@dimen/space_5">
                            <ImageView
                                android:layout_width="@dimen/space_25"
                                android:layout_height="@dimen/space_25"
                                android:src="@drawable/pressure" />
                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/space_5" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pressure_title"
                                android:textSize="@dimen/text_12" />
                            <TextView
                                android:id="@+id/pressure"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_pressure"
                                android:textSize="@dimen/text_14" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <Space
                        android:layout_width="@dimen/space_10"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:weightSum="2"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/button_next"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/see_more"
                            android:textSize="@dimen/text_13"
                            android:gravity="center" />
                        <Button
                            android:id="@+id/button_history"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/history_btn"
                            android:textSize="@dimen/text_12"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:backgroundTint="@color/purple_200" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>